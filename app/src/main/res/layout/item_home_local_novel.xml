<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/bg_list_item_white">

    <ImageView
        android:id="@+id/item_home_local_novel_pic"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="fitStart"
        android:src="@drawable/pic_default_novel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_home_local_novel_pic"
        android:layout_alignTop="@+id/item_home_local_novel_pic"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_home_local_novel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#333333"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/item_home_local_novel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name" />

    </LinearLayout>

</RelativeLayout>