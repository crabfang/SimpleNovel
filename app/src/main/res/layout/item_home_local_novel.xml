<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_list_item_white">

    <ImageView
        android:id="@+id/item_home_local_novel_pic"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="fitStart"
        android:src="@drawable/pic_default_novel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/item_home_local_novel_pic"
        android:layout_alignTop="@+id/item_home_local_novel_pic"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/item_home_local_novel_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_home_local_novel_pic"
        app:layout_constraintBottom_toBottomOf="@+id/item_home_local_novel_pic">

        <TextView
            android:id="@+id/item_home_local_novel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#333333"
            tools:text="@string/app_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/item_home_local_novel_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_local_novel_title" />
        <TextView
            android:id="@+id/item_home_local_novel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_local_novel_author" />
        <TextView
            android:id="@+id/item_home_local_novel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toTopOf="@+id/item_home_local_novel_title"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_local_novel_title" />
        <TextView
            android:id="@+id/item_home_local_novel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_local_novel_type" />
        <TextView
            android:id="@+id/item_home_local_novel_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_local_novel_update" />
        <TextView
            android:id="@+id/item_home_local_novel_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="#999999"
            tools:text="@string/app_name"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/item_home_local_novel_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_local_novel_chapter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>