<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_list_item_white" >

    <ImageView
        android:id="@+id/item_rank_list_novel_pic"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="fitStart"
        android:src="@drawable/pic_default_novel"/>

    <TextView
        android:id="@+id/item_rank_list_novel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="#333333"
        tools:text="@string/app_name" />
    <TextView
        android:id="@+id/item_rank_list_novel_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12dp"
        android:textColor="#999999"
        tools:text="@string/app_name" />

</LinearLayout>